@model List<WCC_Checkpoint2.Models.Book>

@if (Model.Count == 0)
{
    <h3 class="mt-3">Aucun résultat trouvé pour votre recherche.</h3>
}
else
{
    <table class="table-striped table">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Price</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author.Name</td>
                    <td>@book.Price</td>
                    <td><a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="btn btn-info">Détails</a></td>
                </tr>
            }
        </tbody>
    </table>
}
