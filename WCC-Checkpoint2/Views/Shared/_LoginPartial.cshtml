@using Microsoft.AspNetCore.Identity
@using WCC_Checkpoint2.Areas.Identity.Data

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<nav class="login-nav">
    <ul>
        @if (SignInManager.IsSignedIn(User))
        {
            
                <form id="logoutForm" class="" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="login-button">Se Déconnecter</button>
                </form>
            
        }
        else
        {
            <li>
                <a class="user-button" id="register" asp-area="Identity" asp-page="/Account/Register">Créer un compte</a>
            </li>
            <li>
                <a class="user-button" id="login" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
            </li>
        }
    </ul>
</nav>